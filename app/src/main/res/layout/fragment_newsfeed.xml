<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_main"
        android:layout_width="match_parent"
        android:layout_height="471dp"
        android:scrollbarStyle="outsideOverlay"
        android:clipToPadding="false"
        android:paddingTop="4dp"
        android:paddingBottom="@dimen/fab_recycler_view_padding"
        android:paddingLeft="@dimen/list_padding"
        android:paddingRight="@dimen/list_padding"
        android:drawSelectorOnTop="true"
        android:animationCache="false"
        android:scrollingCache="false"
        android:divider="@android:color/transparent"/>






    <LinearLayout
        android:id="@+id/empty_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/empty_icon1"
            android:src="@drawable/ic_notifications_black_empty"
            android:alpha="0.1"
            android:paddingBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/view_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context="com.ai.dreamchasers.m.MainActivity">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textLongMessage"
            android:ems="7"
            android:layout_marginBottom="6dp"
            android:id="@+id/sendText"
            android:hint="Write a message..."
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:imeOptions="actionDone"
            android:background="@android:color/transparent"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/empty_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/emptyColour"
            android:text="@string/no_active"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
           />


    </RelativeLayout>




</LinearLayout>